{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": false
  },
  "exclude": [
    "src/shared/components/**/*"
  ],
  "include": [
    "src/server/**/*",
    "src/shared/**/*"
  ]
}
