    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/styled-jsx": "^2.2.8",
    "prettier-tslint": "^0.4.2",
    "shx": "^0.3.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
